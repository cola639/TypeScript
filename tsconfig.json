{
  "compilerOptions": {
    "target": "ES6", // 编译为 ECMAScript 6
    "module": "commonjs", // 使用 CommonJS 模块系统
    "rootDir": "./src", // 源文件根目录
    "outDir": "./dist", // 编译后的文件输出目录
    "strict": true, // 启用所有严格类型检查
    "esModuleInterop": true, // 兼容 ES 模块导入
    "skipLibCheck": true, // 跳过库的类型检查
    "sourceMap": true, // 启用 source maps 以支持调试
    "inlineSourceMap": false, // 生成独立的 .map 文件，便于调试
    "inlineSources": true // 将 TypeScript 代码嵌入到 map 文件中
  },
  "include": ["src/**/*.ts"], // 只编译 src 文件夹下的 .ts 文件
  "exclude": ["node_modules", "**/*.md"] // 排除 node_modules 和 .md 文件
}
