{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile current file",
      "type": "shell",
      "command": "npx tsc \"${file}\" --outDir dist --sourceMap", // 强制生成 source map
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
