{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Current File",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/dist/${fileBasenameNoExtension}.js", // 编译后的输出路径
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true, // 启用 source map 支持
      "preLaunchTask": "compile current file", // 只编译当前文件
      "console": "integratedTerminal"
    }
  ]
}
